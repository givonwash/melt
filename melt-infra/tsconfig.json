{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src",
    "charset": "utf8",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ES2022",
    "moduleResolution": "Node16",
    "noEmit": false,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "out",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "ES2022"
  },
  "include": ["./eslint.config.js", "./jest.config.js", "**/*.ts"],
  "exclude": ["node_modules"]
}
